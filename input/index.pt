// parselMouths.pt

const parselMouths = ["Delphini", "Corvinus Gaunt", "Gormlaith Gaunt", "Marvolo Gaunt", "Morfin Gaunt", "Herpo the Foul", "Nagini", "Harry Potter", "Merope Riddle", "Tom Riddle", "Salazar Slytherin"]

function canSpeakParseltongue(name):
    if (parselMouths.includes(name)):
        return name + " can speak Parseltongue."
    else:
        return name + " cannot speak Parseltongue."

console.log(canSpeakParseltongue("Harry Potter"))
